@page "/passwordrecovery"

<html>

<head>
    <style type="text/css">
        .tekst{
            color: white;
            text-align: center;
        }
        .message {
            color: white;
            text-align: center;
            margin-top: 10px;
        }
        .invul {
            max-width: 50%;
            max-height: 20%;
            margin-left: 38%;
        }
        .dif{
            margin-top: 5%;
        }
        .button1 {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
            background-color: gray; /* Green */
            border: none;
            color: white;
            padding: 12px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-left: 10px;
        }
        .disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="dif">
        <h3 class="tekst">Password Recovery</h3>
        <p class="tekst">Lost your password? fill in your email to recover your password</p>
        <input class="invul" @bind="email" type="email" placeholder="Email" />
        <button class="button1" disabled="@Disabled" @onclick="klik">Recover password</button>
        <p class="message">@Message</p>
    </div>

    
</body>



</html>
