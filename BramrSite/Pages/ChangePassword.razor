@page "/password"
@attribute [Authorize]



<html>
<head>
<style type="text/css">
    .tekst {
        color: white;
        text-align: center;
        margin-top: 10px;
    }

    .message {
        color: white;
        text-align: center;
        margin-top: 10px;
    }

    .invul {
        max-width: 50%;
        max-height: 20%;
        margin-left: 45%;
    }

    .dif {
        margin-top: 5%;
    }

    .button1 {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        background-color: gray;
        border: none;
        color: white;
        padding: 12px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        max-width: 50%;
        max-height: 20%;
        margin-left: 48%;
        margin-top: 20px;
    }
    .button2 {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        background-color: gray;
        border: none;
        color: white;
        padding: 12px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        max-width: 50%;
        max-height: 20%;
        margin-top: 5px;
        margin-left: 5px;
    }
    a:hover{
        color: white;
    }
    .disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    </style>
</head>
<body>

    <a class="button2" href="account">Back to Account</a>
    <p class="tekst">Current password: </p>
    <input class="invul" type="password" @oninput="(e) => { CurrentPassword = e.Value.ToString(); CheckInput(); }" />
    <br />
    <p class="tekst">New password: </p>
    <input class="invul" type="password" @oninput="(e) => { NewPassword = e.Value.ToString(); CheckInput(); }" />
    <br />
    <p class="tekst">Repeat new password: </p>
    <input class="invul" type="password" @oninput="(e) => { RepeatNewPassword = e.Value.ToString(); CheckInput(); }" />
    <br />
    <p class="tekst">@ErrorMessage</p>
    <br />
    <button class="button1" @onclick="() => { Save(); }" disabled="@Disabled">Save</button>


</body>


</html>
